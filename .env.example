# Beat Analyzer Konfiguration
# Kopiere diese Datei nach .env und passe sie an

# OSC Ziel
OSC_HOST=127.0.0.1
OSC_PORT=9000

# JACK Client Name
JACK_CLIENT_NAME=beat-analyzer

# Audio Buffer Size (64, 128, 256, 512, 1024)
# Kleinere Werte = niedrigere Latenz, mehr CPU
BUFFER_SIZE=64

# BPM Range
BPM_MIN=60
BPM_MAX=200

# Log Level (0=DEBUG, 1=INFO, 2=WARN, 3=ERROR)
LOG_LEVEL=1

# Feature Toggles (1=aktiviert, 0=deaktiviert)
ENABLE_BEATCLOCK=1
ENABLE_VU_RMS=1
ENABLE_VU_PEAK=1
