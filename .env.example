# Beat Analyzer Konfiguration
# Kopiere diese Datei nach .env und passe sie an

# JACK Client Name
JACK_CLIENT_NAME=beat-analyzer

# BPM Range
BPM_MIN=60
BPM_MAX=200

# Log Level (0=DEBUG, 1=INFO, 2=WARN, 3=ERROR)
LOG_LEVEL=1

# Feature Toggles (1=aktiviert, 0=deaktiviert)
ENABLE_BEATCLOCK=1
ENABLE_BEAT=1
ENABLE_VU_RMS=1
ENABLE_VU_PEAK=1
ENABLE_VU=1

# Anzahl der BPM-Eingänge (0-N) - JACK Ports: bpm_1, bpm_2, ...
NUM_BPM_CHANNELS=4

# Anzahl der VU-Eingänge (0-N) - JACK Ports: vu_1, vu_2, ...
NUM_VU_CHANNELS=2

# VU-Meter Konfiguration
VU_RMS_ATTACK=1.0     # 0.0-1.0 (1.0 = instant)
VU_RMS_RELEASE=0.5    # 0.0-1.0 (niedriger = langsamer)
VU_PEAK_FALLOFF=40.0  # dB pro Sekunde

# OSC Sende-Rate in Hz (1-100, Standard: 25)
# Gilt für VU-Meter und andere periodische OSC-Nachrichten
OSC_SEND_RATE=25

# Beat Detection Latenz-Kompensation (in ms)
# FFT-Zentrum(5.8ms) + Peak Detection(5.8ms) + Ringpuffer+Thread(~6ms) = ~18ms
BEAT_LATENCY_MS=18

# Auto Gain Control (AGC) - normalisiert Eingangssignal automatisch
# Verhindert dass leise Signale nicht erkannt werden
AGC_ENABLED=1
AGC_TARGET_PEAK=0.7

# OSC Ziele - Format: OSC_HOST_Name=host:port
# Beliebig viele Ziele möglich, werden automatisch erkannt
OSC_HOST_Protokol=127.0.0.1:9000
OSC_HOST_Resolume=127.0.0.1:7000

# OSC Empfang für externe Beat-Clock (Training-Modus)
# Empfängt: /beat iii (beat 1-4, bar, bpm)
#           /clockmode i (0=Training, 1=Eigene Beatclock)
#           /tap i (Beat-Nummer 1-4 setzen)
OSC_RECEIVE_PORT=7775
